dist = 500px

.panorama
  padding 3%
  height dist
  z-index 5
  position relative
  background-color rgba(25.5%, 51.8%, 76.9%, 0.75)

  .wrapper
    center()
    .posterWrapper
      column(1/3)
      +below('desktop')
        stack()
      img
        center()
    .info
      color white
      column(2/3)
      +below('desktop')
        stack()

    .overview
      clear both

    .next
      clear both
      width 100%
      text-align center

.backgroundImage
  position absolute
  left 0
  right 0
  z-index 1

  display block
  width 100%
  height 800px

  filter brightness(150%) grayscale(1)
  background-size cover
  background-repeat no-repeat
  background-position 50% 50%
.panorama
  padding 3%
  height 500px

  .wrapper
    center()
    .posterWrapper
      column(1/3)
      +below('desktop')
        stack()
      img
        center()
    .info
      column(2/3)
      +below('desktop')
        stack()

    .overview
      clear both

    .next
      clear both
      width 100%
      text-align center
@import '../../node_modules/jeet/styl/index.styl'
@import '../../node_modules/rupture/rupture/index.styl'

*
  padding 0
  margin 0

[v-cloak]
  display: none

body
  background-color #ece7d5

.wrapper
  margin 0 auto
  width 90%

.panorama
  padding 3%
  height 500px

.poster
  float left

.info
  float right
  max-width 60%
  padding 6%
  background-color rgba(255, 255, 255, 0.3)

.overview
  clear both

.next
  clear both
  width 100%
  text-align center


.videoWrapper
  text-align center

.videoContainer
  width 100%
  position relative
  video
    width 640px
    height 360px
    // margin 0 auto
    // display block
  .videoCaption
    position absolute
    top 0
    left 0
    text-align right

#videoCaption
  background-color red

.myButton 
    background-color:transparent;
    -moz-border-radius:28px;
    -webkit-border-radius:28px;
    border-radius:28px;
    border:1px solid #ffffff;
    display:inline-block;
    cursor:pointer;
    color:#ffffff;
    font-family:Arial;
    font-size:17px;
    padding:16px 31px;
    text-decoration:none;
    text-shadow:0px 1px 0px #57a64b;

.myButton:hover 
    background-color:transparent;

.myButton:active 
    position:relative;
    top:1px;

